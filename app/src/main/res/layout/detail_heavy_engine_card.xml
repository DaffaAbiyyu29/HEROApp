<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_card_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    tools:ignore="MissingConstraints">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detail_header_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red_secondary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins_b"
                        android:text="Perawatan Alat"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/detail_title" />

                    <TextView
                        android:id="@+id/detail_heavy_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_b"
                        android:text="Perawatan Alat"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="30sp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_title" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail_heavy_name">

                        <ImageView
                            android:id="@+id/detail_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/beko1"
                            android:scaleType="fitXY" />

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/detail_header_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/detail_hours_meter_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="Hours Meter Saat Ini"
                        android:textColor="#666666"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:id="@+id/detail_hours_meter_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_hours_meter_text">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="6dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hm11"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/red_primary"
                                android:fontFamily="@font/poppins_b"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:enabled="false"
                                android:inputType="number"
                                android:textSize="17sp"/>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/detail_keterangan_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Keterangan Peminjaman"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_hours_meter_layout"/>

                    <EditText
                        android:id="@+id/detail_keterangan_value"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins_b"
                        android:textColor="@color/red_primary"
                        android:text="Praktikum Cleaning AC Kelas TAB - 2A"
                        android:backgroundTint="#B2B2B2"
                        android:autofillHints="Keterangan Peminjaman"
                        app:layout_constraintTop_toBottomOf="@+id/detail_keterangan_text" />

                    <TextView
                        android:id="@+id/detail_pj_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Penanggung Jawab"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_keterangan_value"/>

                    <EditText
                        android:id="@+id/detail_pj_value"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins_b"
                        android:textColor="@color/cream"
                        android:enabled="false"
                        android:text="Sadam Saputra"
                        android:backgroundTint="#B2B2B2"
                        android:autofillHints="Keterangan Peminjaman"
                        app:layout_constraintTop_toBottomOf="@+id/detail_pj_text" />

                    <TextView
                        android:id="@+id/detail_jenis_perawatan_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Jenis Perawatan"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_pj_value"/>

                    <Spinner
                        android:id="@+id/detail_jenis_perawatan_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins_b"
                        android:textSize="16sp"
                        android:popupTheme="@style/SpinnerPopupStyle"
                        app:layout_constraintTop_toBottomOf="@id/detail_jenis_perawatan_text" />

                    <TextView
                        android:id="@+id/detail_diajukan_date_start_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:text="Dimulai Pada"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_jenis_perawatan_spinner"/>

                    <EditText
                        android:id="@+id/detail_diajukan_date_start"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:editable="false"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins_b"
                        android:textColor="@color/cream"
                        android:text="Senin, 5 Juni 2024"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="10dp"
                        android:backgroundTint="#B2B2B2"
                        android:autofillHints="Dimulai Pada"
                        app:layout_constraintTop_toBottomOf="@+id/detail_diajukan_date_start_text" />

                    <TextView
                        android:id="@+id/detail_diajukan_date_end_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="Selesai"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_diajukan_date_start" />

                    <EditText
                        android:id="@+id/detail_diajukan_date_end"
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="50dp"
                        android:autofillHints="Selesai Pada"
                        android:backgroundTint="#B2B2B2"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_b"
                        android:text="Senin, 5 Juni 2024"
                        android:textColor="@color/cream"
                        app:layout_constraintTop_toBottomOf="@+id/detail_diajukan_date_end_text" />

                    <TextView
                        android:id="@+id/detail_catatan_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="Catatan Praktikum"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_diajukan_date_end" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/note_card"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/detail_catatan_text"
                        >

                        <EditText
                            android:id="@+id/detail_catatan"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top"
                            android:padding="12dp"
                            android:autofillHints="Catatan"
                            android:background="@color/red_primary"
                            android:fontFamily="@font/poppins_b"
                            android:textSize="14sp"
                            android:text="Masukkan catatan kegiatan praktikum yang dilakukan..."
                            android:textColor="@color/cream" />


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/detail_button_batal"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:enabled="true"
                        android:text="Batal"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_b"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/red_secondary"
                        app:cornerRadius="50dp"
                        app:rippleColor="@android:color/holo_red_dark"
                        android:textSelectHandle="@color/cream"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/note_card"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="25dp"
                        android:enabled="true"
                        android:text="Mulai Perawatan"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_b"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:backgroundTint="#038100"
                        app:cornerRadius="50dp"
                        app:rippleColor="@android:color/holo_green_dark"
                        android:textSelectHandle="@color/cream"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/note_card"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>
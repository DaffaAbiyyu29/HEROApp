<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_secondary"
    tools:context=".ui.maintenance.ActionSchaduleFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_card"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/red_secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_b"
            android:gravity="bottom|center"
            android:text="Detail Pengerjaan"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_b"
            android:gravity="bottom|center"
            android:text="PC210LC-10MO"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:src="@drawable/rounded_top_corners_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_card"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/material_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_card"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeColor="@android:color/transparent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_b"
            android:gravity="bottom|center"
            android:text="Gambar Pengerjaan"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/selected_image_view"
                android:layout_width="350dp"
                android:layout_height="245dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Selected Image"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />

        </com.google.android.material.card.MaterialCardView>

<!--        <com.google.android.material.divider.MaterialDivider-->
<!--            android:id="@+id/divider"-->
<!--            android:layout_width="185dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="28dp"-->
<!--            android:gravity="bottom|center"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@id/card_image">-->

<!--        </com.google.android.material.divider.MaterialDivider>-->

        <TextView
            android:id="@+id/standarisasi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppins_b"
            android:text="Standarisasi : "
            android:textColor="@color/red_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/standarisasi_layout"
            android:layout_width="362dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.Oli menyentuh plug F "
                android:textColor="#7F7E7E"
                android:textSize="20sp" />

            <!-- Add your views inside the LinearLayout here -->
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.HeavyEquipmentRealtimeObserver" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryVariant">@color/red_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerPopupStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HeavyEquipmentRealtimeObserver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HeavyEquipmentRealtimeObserver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HeavyEquipmentRealtimeObserver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearanceOverlay.App.CornerTopOnly" parent="">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopLeft">55dp</item>
        <item name="cornerSizeTopRight">55dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Atur warna popup overlay sesuai kebutuhan aplikasi Anda -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu" />

    <style name="SpinnerPopupStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/red_primary</item>
        <item name="android:textColor">@color/cream</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- Tema kustom untuk DatePickerDialog -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red_primary</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePicker</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomDatePicker" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/red_primary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Tema kustom untuk TimePickerDialog -->
    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red_primary</item>
        <item name="android:timePickerDialogTheme">@style/CustomTimePicker</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomTimePicker" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/red_primary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Gaya kustom untuk tombol di dialog -->
    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red_primary</item>
    </style>

</resources>
